<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8EEED"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imgvAvatarInfor"
        android:layout_width="330dp"
        android:layout_height="226dp"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        android:src="@drawable/a101" />

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:paddingLeft="24dp"
        android:paddingTop="16dp">

        <Button
            android:id="@+id/btnRed"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="#F30F0F" />

        <Button
            android:id="@+id/btnBlack"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="#0F0D0D" />

        <Button
            android:id="@+id/btnWhite"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="#FFFFFF" />

        <ImageButton
            android:id="@+id/imgBtnFavourite"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="180dp"
            android:background="#00FFFFFF"
            android:src="@drawable/icon_tym" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginRight="16dp"
        android:background="#F1F1E7"
        android:orientation="vertical">

        <LinearLayout
            android:paddingTop="16dp"
            android:paddingLeft="24dp"
            android:paddingRight="16dp"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/icon_price"
                android:layout_width="32dp"
                android:layout_height="32dp"/>
            <TextView
                android:id="@+id/tvGiaInFor"
                android:text="100000"
                android:layout_marginLeft="16dp"
                android:textSize="24sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:paddingTop="16dp"
            android:paddingLeft="24dp"
            android:paddingRight="16dp"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/icon_ts"
                android:layout_width="32dp"
                android:layout_height="32dp"/>
            <TextView
                android:id="@+id/tvDongCoInfor"
                android:text="Dong co"
                android:layout_marginLeft="16dp"
                android:textSize="24sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>